<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009973"
    android:orientation="vertical"
    tools:context=".ui.fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOG APP"
            android:textColor="@color/white"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="138dp"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerPerros"
            android:layout_width="105dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/ver_perros"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuscarPerros"
            android:layout_width="101dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/buscar_perros"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnInsertarPerro"
            android:layout_width="114dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/insertar_perro"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBorrarPerro"
            android:layout_width="99dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/borrar_perro"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Razas mas buscadas"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mas"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="22sp"/>

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"
            android:layout_margin="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgRazasMasBuscadas1"
            android:layout_width="139dp"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:src="@drawable/dominika" />

        <ImageView
            android:id="@+id/imgRazasMasBuscadas2"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/grooming" />

        <ImageView
            android:id="@+id/imgRazasMasBuscadas3"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/gilberto_dog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banners de la app"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


    <!--
    Imagen del banner de la app
    -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner_dog"/>

    </LinearLayout>


</LinearLayout>
